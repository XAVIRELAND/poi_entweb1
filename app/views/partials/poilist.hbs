<section class="ui raised segment">
    <div class="ui grid">
        <aside class="six wide column">
            <img src="images/homer5.jpg" class="ui medium image">
        </aside>
        <article class="eight wide column">
            <table class="ui celled table segment">
                <thead>
                <tr>
                    <th>Lighthouse Name</th>
                    <th>Coordinates</th>
                    <th>County</th>
                    <th>Description</th>
                    <th>Creator</th>
                </tr>
                </thead>
                <tbody>
                {{#each pois}}
                    <tr>
                        <td> {{name}} </td>
                        <td> {{coordinates}} </td>
                        <td> {{county}} </td>
                        <td> {{description}} </td>
                        <td> {{creator.firstName}} {{creator.lastName}} </td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </article>
    </div>
</section>
