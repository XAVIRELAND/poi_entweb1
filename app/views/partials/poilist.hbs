<section class="ui raised segment">
    <div class="ui grid">
        <aside class="seven wide column">
            <img src="images/lighthouse6.png"  class="ui fluid image">
        </aside>
        <article class="eight wide column">
            <table class="ui celled table segment">
                <thead>
                <tr>
                    <th>Lighthouse Name</th>
                    <th>Latitude</th>
                    <th>Longitude</th>
                    <th>County</th>
                    <th>Description</th>
                    <th>Image Url</th>
                    <th>Creator</th>
                </tr>
                </thead>
                <tbody>
                {{#each pois}}
                    <tr>
                        <td> {{name}} </td>
                        <td> {{latitude}} </td>
                        <td> {{longitude}}</td>
                        <td> {{county}}</td>
                        <td> {{description}}</td>
                        <td> {{url}}</td>
                        <td> {{creator.firstName}} {{creator.lastName}} </td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </article>
    </div>
</section>
